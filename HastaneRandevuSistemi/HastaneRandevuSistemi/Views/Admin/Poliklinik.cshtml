@{
}

﻿@using HastaneRandevuSistemi.Models
@model List<AnaBilimDaliBilgileri>

<a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="PoliklinikEkle">Poliklinik Ekle</a>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Poliklinikler</th>
            <th scope="col">Bağlı Olduğu Ana Bilim Dalı</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.poliklinikler.PoliklinikAdi</td>
                <td>@item.AnaBilimDallariAdi</td>
                <td>
                    <a class="btn btn-danger" asp-area="" asp-controller="Admin" asp-action="PoliklinikSil" asp-route-id="@item.poliklinikler.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
