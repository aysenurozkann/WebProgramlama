@model List<AnaBilimDaliBilgileri>

@{
    ViewData["Title"] = "Poliklinikler";
}
<br />
<br />
<br />
<br />
<br />

<header class="text-center py-4">
    <h1>Sakarya Üniversitesi Hastanesi</h1>
    <p class="lead">Anabilim Dalları ve Poliklinikler</p>
</header>

@{
    // Alfabetik Sıralama
    var sortedPoliklinikler = Model.OrderBy(item => item.AnaBilimDallariAdi).ToList();
}

<table class="table">
    <thead>
        <tr>
            <th>
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Poliklinik Adı</h5>
                </div>
            </th>
            <th>
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Bağlı Olduğu Anabilim Dalı</h5>
                </div>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => @item.poliklinikler.PoliklinikAdi)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => (item.AnaBilimDallariAdi))
            </td>
        </tr>
}
    </tbody>
</table>
